---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedIn from "../components/Icons/LinkedIn.astro";
import Github from "../components/Icons/Github.astro";
import Facebook from "../components/Icons/Facebook.astro";
import Instagram from "../components/Icons/Instagram.astro";
import Experience from "../components/Experience.astro";
import Maleta from "../components/Icons/Maleta.astro";
---

<Layout title="Portafolio de tom - Desarrollador web" description="Waos">
  <main class="px-4">
    <SectionContainer class="py-36 pb-24">
      <img src="/waos.jpg" alt="Tom-photo" class="rounded-full size-20 mb-4" />

      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, Soy Johan
        <a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/johan-steven-ramirez-murcia-95ab80295/"
          target="a_blank"
          rel="noopener"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="opacity-80">
          Estudiante de Ingeniería de Sistemas con una sólida formación en
          diversos lenguajes de programación, incluyendo
        </span>
        <span class="text-purple-400"> C++, C#, Java y Python </span>
        <span class="opacity-80">. Tengo experiencia en el </span>
        <span class="text-purple-400"
          >diseño y administración de bases de datos</span
        >
        <span class="opacity-80">
          . Siempre estoy en la búsqueda de nuevas oportunidades para aprender y
          desarrollar mis habilidades, con el objetivo de crear proyectos
          innovadores.
        </span>
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/johan-steven-ramirez-murcia-95ab80295/"
        >
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Tom21-xd">
          <Github class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://web.facebook.com/tom21xd/">
          <Facebook class="size-4 md:size-6" />
          Facebook
        </SocialPill>
        <SocialPill href="https://www.instagram.com/johanramirez48/">
          <Instagram class="size-4 md:size-6" />
          Instagram
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="Experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Maleta class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
