---
import Bootstrap from "./Icons/Bootstrap.astro";
import Csharp from "./Icons/Csharp.astro";
import Css from "./Icons/Css.astro";
import Html from "./Icons/Html.astro";
import Js from "./Icons/Js.astro";
import Mysql from "./Icons/Mysql.astro";
import Net from "./Icons/Net.astro";
import Sparql from "./Icons/Sparql.astro";
import Github from "./Icons/Github.astro";
import Link from "./Icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const Tags = {
  Css: {
    name: "Css",
    class: "bg-[#fffff] text-blue-400 border border-blue-400 ",
    icon: Css,
  },
  Html: {
    name: "Html",
    class:
      "bg-[#fffff] text-black dark:text-orange-400 border border-orange-400",
    icon: Html,
  },
  Js: {
    name: "Js",
    class:
      "bg-[#fffff] text-black dark:text-yellow-300 border border-yellow-300",
    icon: Js,
  },
  _Net: {
    name: ".Net",
    class:
      "bg-[#fffff] text-black dark:text-purple-400 border border-purple-400",
    icon: Net,
  },
  Mysql: {
    name: "Mysql",
    class: "bg-[#fffff] text-black dark:text-blue-400 border border-blue-400",
    icon: Mysql,
  },
  Csharp: {
    name: "C#",
    class: "bg-[#fffff]  text-black dark:text-blue-400 border border-blue-400",
    icon: Csharp,
  },
  Bootstrap: {
    name: "Bootstrap",
    class:
      "bg-[#fffff]  text-black dark:text-purple-400 border border-purple-400",
    icon: Bootstrap,
  },
  Spar: {
    name: "SparQL",
    class: "bg-[#fffff]  text-black dark:text-blue-400 border border-blue-400",
    icon: Sparql,
  },
};

const proyectos = [
  {
    title: "Encriptador de texto",
    description:
      "Encriptador Realizado para el challenges de alura x oracle ONE",
    img: "Projects/Encriptador.webp",
    url: "https://encriptador-delta-five.vercel.app/",
    tags: [Tags.Html, Tags.Css, Tags.Js],
    github: "https://github.com/Tom21-xd/Encriptador",
  },
  {
    title: "Sofware de reservas",
    description: "Software de reservas dinamico con base de datos",
    img: "Projects/Reservas.webp",
    url: "",
    tags: [
      Tags.Html,
      Tags.Css,
      Tags.Js,
      Tags.Mysql,
      Tags._Net,
      Tags.Csharp,
      Tags.Bootstrap,
    ],
    github: "https://github.com/Tom21-xd/Web",
  },
  {
    title: "Web Semantica",
    description:
      "Web Semantica para la materia de gestion del conocimiento, tematica de peliculas",
    img: "/Projects/Web_SemanticaPeli.webp",
    url: "",
    tags: [
      Tags.Html,
      Tags.Js,
      Tags._Net,
      Tags.Csharp,
      Tags.Bootstrap,
      Tags.Spar,
    ],
    github: "https://github.com/Tom21-xd/WebSemantica",
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    proyectos.map(({ img, title, description, tags, url, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={img}
            />
          </div>
        </div>
        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <Github class="size-6" />
                  Code
                </LinkButton>
              )}
              {url && (
                <LinkButton href={url}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
