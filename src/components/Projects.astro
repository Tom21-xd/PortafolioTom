---
const proyectos = [
  {
    title: "Encriptador de texto",
    description:
      "Encriptador Realizado para el challenges de alura x oracle ONE",
    img: "Projects/Encriptador.webp",
    url: "https://encriptador-delta-five.vercel.app/",
    tags: ["Css", "Js", "Html"],
    github: "https://github.com/Tom21-xd/Encriptador",
  },
];
---

{
  proyectos.map((proyecto) => (
    <article>
      <h3 class="text-2xl font-semibold text-purple-400 mb-2">
        {proyecto.title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{proyecto.description}</p>
      <ul class="">
        {proyecto.tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={proyecto.img}
        alt={proyecto.title}
      />
    </article>
  ))
}
