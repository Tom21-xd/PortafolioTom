---
import Bootstrap from "./Icons/Bootstrap.astro";
import Csharp from "./Icons/Csharp.astro";
import Css from "./Icons/Css.astro";
import Html from "./Icons/Html.astro";
import Js from "./Icons/Js.astro";
import Mysql from "./Icons/Mysql.astro";
import Net from "./Icons/Net.astro";
import Sparql from "./Icons/Sparql.astro";

const Tags = {
  Css: {
    name: "Css",
    class: "bg-[#fffff] text-blue-400 border border-blue-400 ",
    icon: Css,
  },
  Html: {
    name: "Html",
    class:
      "bg-[#fffff] text-black dark:text-orange-400 border border-orange-400",
    icon: Html,
  },
  Js: {
    name: "Js",
    class:
      "bg-[#fffff] text-black dark:text-yellow-300 border border-yellow-300",
    icon: Js,
  },
  _Net: {
    name: ".Net",
    class:
      "bg-[#fffff] text-black dark:text-purple-400 border border-purple-400",
    icon: Net,
  },
  Mysql: {
    name: "Mysql",
    class: "bg-[#fffff] text-black dark:text-blue-400 border border-blue-400",
    icon: Mysql,
  },
  Csharp: {
    name: "C#",
    class: "bg-[#fffff]  text-black dark:text-blue-400 border border-blue-400",
    icon: Csharp,
  },
  Bootstrap: {
    name: "Bootstrap",
    class:
      "bg-[#fffff]  text-black dark:text-purple-400 border border-purple-400",
    icon: Bootstrap,
  },
  Spar: {
    name: "SparQL",
    class: "bg-[#fffff]  text-black dark:text-blue-400 border border-blue-400",
    icon: Sparql,
  },
};

const proyectos = [
  {
    title: "Encriptador de texto",
    description:
      "Encriptador Realizado para el challenges de alura x oracle ONE",
    img: "Projects/Encriptador.webp",
    url: "https://encriptador-delta-five.vercel.app/",
    tags: [Tags.Html, Tags.Css, Tags.Js],
    github: "https://github.com/Tom21-xd/Encriptador",
  },
  {
    title: "Sofware de reservas",
    description: "Software de reservas dinamico con base de datos",
    img: "Projects/Reservas.webp",
    url: "",
    tags: [
      Tags.Html,
      Tags.Css,
      Tags.Js,
      Tags.Mysql,
      Tags._Net,
      Tags.Csharp,
      Tags.Bootstrap,
    ],
    Github: "https://github.com/Tom21-xd/Web",
  },
  {
    title: "Web Semantica",
    description:
      "Web Semantica para la materia de gestion del conocimiento, tematica de peliculas",
    img: "/Projects/Web_SemanticaPeli.webp",
    url: "",
    tags: [
      Tags.Html,
      Tags.Js,
      Tags._Net,
      Tags.Csharp,
      Tags.Bootstrap,
      Tags.Spar,
    ],
    Github: "https://github.com/Tom21-xd/WebSemantica",
  },
];
---

{
  proyectos.map((proyecto) => (
    <article>
      <h3 class="text-2xl font-semibold text-purple-400 mb-2">
        {proyecto.title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{proyecto.description}</p>
      <ul class="flex gap-x-4 flex-row mb-2">
        {proyecto.tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10 ]"
        src={proyecto.img}
        alt={proyecto.title}
      />
    </article>
  ))
}
